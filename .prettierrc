{
  "endOfLine": "auto",
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 4,
        "compiler": "0.8.19",
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "always"
      }
    },
    { "files": "*.json", "options": { "tabWidth": 2 } }
  ]
}
