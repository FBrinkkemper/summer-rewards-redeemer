{
  "name": "oasis-ajna-rewards-redeemer",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT",
  "scripts": {
    "start:local": "yarn db:start && npx hardhat node --max-memory 4192 --fork https://eth-goerli.g.alchemy.com/v2/8pU3VS_K57r5DcgdmC9QEEhDcObR56Zx --fork-block-number 8900000",
    "db:start": "docker start ajna_rewards || yarn db:run",
    "db:run": "docker run --name ajna_rewards -e POSTGRES_PASSWORD=pass -p 5432:5432 -d postgres && sleep 5 && yarn db:migrate",
    "db:stop": "docker stop ajna_rewards && docker rm ajna_rewards",
    "db:reset": "docker exec -it ajna_rewards psql -U postgres -c 'DROP DATABASE IF EXISTS ajna_rewards'",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "concurrently \"yarn start:local\" \"npx hardhat run --network localhost scripts/snapshot/seed-contract-and-db-hardhat.ts\"",
    "test": "yarn db:start && npx hardhat test",
    "test:ts": "jest scripts/",
    "build": "npx hardhat compile && npx graphclient build",
    "clean": "rm -rf artifacts cache typechain",
    "lint:fix": "solhint --fix -f table contracts/*.sol contracts/**/*.sol && eslint --fix test/**/*.ts scripts/**/*.ts",
    "lint:contracts": "./node_modules/.bin/solhint -f table contracts/*.sol contracts/**/*.sol",
    "lint:typescript": "./node_modules/.bin/eslint test/**/*.ts scripts/**/*.ts",
    "lint": "yarn lint:contracts && yarn lint:typescript",
    "format:fix": "./node_modules/.bin/prettier --write contracts/*.sol contracts/**/*.sol test/**/*.ts scripts/**/*.ts",
    "format": "./node_modules/.bin/prettier --check contracts/*.sol contracts/**/*.sol test/**/*.ts",
    "ngrok:start": "yarn db:start && ngrok tcp 5432",
    "bundle:lambda:daily": "esbuild lambdas/daily/index.ts --bundle --minify --loader:.node=file --sourcemap --platform=node --target=es2020 --outfile=dist/index.js && bash postinstall.sh",
    "bundle:lambda:weekly": "esbuild lambdas/weekly/index.ts --bundle  --minify --loader:.node=file --sourcemap --platform=node --target=es2020 --outfile=dist/index.js && bash postinstall.sh",
    "generate:lambda:daily:nozip": " npx graphclient build && npx prisma generate && cp ./prisma/schema.prisma ./dist &&  yarn bundle:lambda:daily",
    "generate:lambda:daily": "yarn generate:lambda:daily:nozip && cd dist && zip -r ../daily.zip . && cd ..",
    "generate:lambda:weekly": "mkdir dist && cp ./prisma/schema.prisma ./dist && npx prisma generate && yarn bundle:lambda:weekly"
  },
  "devDependencies": {
    "@ethersproject/abstract-signer": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@graphprotocol/client-cli": "^3.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/aws-lambda": "^8.10.119",
    "@types/chai": "^4.3.5",
    "@types/cli-progress": "^3.9.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.18.11",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.6.1",
    "fs": "0.0.1-security",
    "hardhat": "^2.16.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "^2.5.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@openzeppelin/contracts": "^4.8.2",
    "@prisma/client": "^4.12.0",
    "@typescript-eslint/typescript-estree": "^5.58.0",
    "chalk": "4.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "ethereum-waffle": "^4.0.10",
    "graphql": "^16.7.1",
    "merkletreejs": "^0.3.9",
    "prisma": "^4.12.0"
  }
}
